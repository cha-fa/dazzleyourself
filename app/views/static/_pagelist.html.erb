<!-- Projects Grid -->
<section class="page-section">
  <div class=" page-section" id="portfolio">

    <div class="container my-4">

      <div class="row">
        <div class="col-lg-12 text-center">
          <br>  
          <h2 class="section-heading text-uppercase"> C'est parti pour une aventure ! </h2>
          <h3 class="section-subheading text-muted">Quelques exemples de projets</h3>
        </div>
      </div>

      <div class="row">
        <% i = 0 %>
        <% @projects.each do |project| %>

          <% if project.state == "published" && i < 3 %>
            <%= render 'projects/project_card', project: project %>
            <% i+= 1 %>
          <% end %>

        <% end %>

      </div>
    </div>
    <div class="mt-3 mb-0">
      <%= render 'layouts/CTA_attendee' %>
    </div>
  </div>
</section>
